<p id="notice"><%= notice %></p>

<h1>Puestos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Numpuestounam</th>
      <th>Imagen</th>
      <th>Horario</th>
      <th>Info general</th>
      <th>Coordenadas</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @puestos.each do |puesto| %>
      <tr>
        <td><%= puesto.nombre %></td>
        <td><%= puesto.numPuestoUNAM %></td>
        <td><%= puesto.imagen %></td>
        <td><%= puesto.horario %></td>
        <td><%= puesto.info_general %></td>
        <td><%= puesto.coordenadas %></td>
        <td><%= link_to 'Show', puesto %></td>
        <td><%= link_to 'Edit', edit_puesto_path(puesto) %></td>
        <td><%= link_to 'Destroy', puesto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

