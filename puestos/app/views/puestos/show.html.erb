<h6>Estrellas</h6>
<%= Califica.average(:estrellas)%>

<h6>Comentarios</h6>
<% @puesto.calificas.each do |c|%>
  <%= c.user.email%>:
  <%= c.comentario%>. 
  Calificación: <%= c.estrellas%>
  <br>

  <%if current_user.id == c.user_id%>
    <%= link_to 'Editar comentario', edit_puesto_califica_path(@puesto,c) %> 
    <%= link_to 'Eliminar comentario', [@puesto,c], method: :delete, data: {confirm: "Seguro?"} %> 
    <br>
  <%end%>

<%end%>


<%if user_signed_in? && !current_user.isAdmin?%>
  <h6>Añade un comentario</h6>
  
  <%= form_for([@puesto, @puesto.calificas.build]) do |f| %>
  
    <p>
      <%= f.label :comentario %><br>
      <%= f.text_area :comentario %>
    </p>
    <p>
      <%= f.label :estrellas%>
      <%= f.number_field :estrellas, min: 1, max: 5%>  
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>
<%end%>
