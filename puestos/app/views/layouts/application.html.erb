      <%end%>
    </ul>
    <ul class="side-nav" id="mobile-demo">
      <%if user_signed_in?%>
      <li>
        <%= link_to "Cerrar sesion", destroy_user_session_path, method: :delete%>
      </li>
      <%else%>
      <li>
        <%= link_to "Iniciar sesion", new_user_session_path%> 
      </li>
      <li>
        <%= link_to "Registrate", new_user_registration_path%> 
      </li>

      <%end%>
    </ul>
  </div>
</nav>
